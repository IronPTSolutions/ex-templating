<h1>New Tweet</h1>

{{#if errors}}
  <div class="alert alert-danger">
    review form data
  </div>
{{/if}}

<form action="/tweets" method="POST" enctype="multipart/form-data">

  <div class="input-group mb-3">
    <label class="input-group-text" for="image"><i class="fa fa-picture-o"></i></label>
    <input type="file" name="image" class="form-control {{#if errors.image}}is-invalid{{/if}}" id="image">
  </div>

  <div class="mb-3">
    <label for="message" class="form-label">message</label>
    <textarea name="message" class="form-control {{#if errors.message}}is-invalid{{/if}}" id="message" rows="5">{{tweet.message}}</textarea>
    {{#if errors.message}}
      <div class="invalid-feedback">
        {{errors.message.message}}
      </div>
    {{/if}}
  </div>
  
  <button type="submit" class="btn btn-primary">Create</button>
</form>